<div class="row">
<div class="col-md-6">
    <h2 id="burger-list">Burger List</h2>
    <ul class="burger-menu">
        {{#each burger}}
        {{#unless devoured}}
        {{> burger/burger devoured = true}}
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="col-md-6">
    <h2 id="devoured-list">Devoured Burgers</h2>
    <ul class="burger-menu">
        {{#each burger}}
        {{#if devoured}}
        {{> burger/burger devoured = false}}
        {{/if}}
        {{/each}}
    </ul>
</div>
</div>

<div class="container">
<div class="row">
    <div class="col-md-6">
        <form class="create-form">
            <div class="form-group" id="burger-form">
                <span class="create">Add A Burger</span>
                <input type="text" class="form-control" name="name" placeholder="Burger Type" id="burgerInput">
                <button type="submit" class="btn btn-primary" id="submit">Submit</button>
            </div>
        </form>
    </div>
</div>