<div class="grid-container">
    <div class="grid-container-fluid main-title">
        <h2>What-A-Burger</h2>
    </div>
    <div class="grid-x grid-margin-x small-up-2">
    <div class="cell">
      <div class="card">
        <div class="card-section">
        <h3 id="burger-title">Burger List</h3>
        <hr>
        <ul class="burger-list">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burger-block devour = true}}
            {{/unless}}
            {{/each}}
        </ul>
        </div>
      </div>
    </div>
    <div class="cell">
      <div class="card">
        <div class="card-section">
        <h3 id="devour-title">Devoured Burgers</h3>
        <hr>
        <ul class="burger-list">
            {{#each burgers}}
            {{#if devoured}}
            {{> burger-block devour = false}}
            {{/if}}
            {{/each}}
        </ul>
        </div>
      </div>
    </div>

    <div class="grid-container-fluid form-container">
        <form class="burger-from">
            <label for="choice">Enter a Burger</label>
            <input type="text" id="choice">
            <button type="submit" class="button">Submit</button>
        </form>
    </div>

